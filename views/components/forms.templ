package components

templ FormGroup(label, inputType, name, placeholder string, required bool) {
	<div class="form-group">
		<label for={ name }>{ label }</label>
		<input
			type={ inputType }
			id={ name }
			name={ name }
			if required {
				required
			}
			placeholder={ placeholder }
		/>
	</div>
}

templ FormGroupWithValue(label, inputType, name, value, placeholder string, required bool) {
	<div class="form-group">
		<label for={ name }>{ label }</label>
		<input
			type={ inputType }
			id={ name }
			name={ name }
			value={ value }
			if required {
				required
			}
			placeholder={ placeholder }
		/>
	</div>
}

