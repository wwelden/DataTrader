templ FormActions(submitText, cancelAction string) {
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">
			{ submitText }
		</button>
		<button
			type="button"
			class="btn btn-secondary"
			hx-get={ cancelAction }
			hx-target="#modal-container"
		>
			Cancel
		</button>
	</div>
}

templ FilterInput(name, placeholder string) {
	<div class="filter-group">
		<input
			type="text"
			name={ name }
			placeholder={ placeholder }
			if name == "search" {
				style="text-transform: uppercase"
			}
		/>
	</div>
}

templ FilterDate(name, placeholder string) {
	<div class="filter-group">
		<input
			type="date"
			name={ name }
			placeholder={ placeholder }
		/>
	</div>
}

templ FilterSelect(name string, options []string) {
	<div class="filter-group">
		<select name={ name }>
			<option value="">All Types</option>
			for _, option := range options {
				<option value={ option }>{ option }</option>
			}
		</select>
	</div>
}
